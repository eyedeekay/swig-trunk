#######################################################################
# Makefile for python 3.x test-suite
#######################################################################

LANGUAGE     = python3
ifneq (,$(USE_VALGRIND))
PYTHON       = valgrind --leak-check=full --suppressions=pyswig.supp @PYTHON3@
else
PYTHON       = @PYTHON3@
endif
#If we use same SCRIPTSUFFIX with Python 2, 
#the 2to3 rule will fall into infinite recursion
SCRIPTSUFFIX = _runme3.py
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@

#Use the tricky command because we want to disable the "import" fixer,
#but currently 2to3 has no option to let us do it
PY2TO3 = 2to3 `2to3 -l | grep -v -E "Available|import$$" | awk '{print "-f "$$0}'`

CPP_TEST_CASES += \
	argcargvtest \
	autodoc \
	callback \
	complextest \
	director_stl \
	director_wstring \
	file_test \
	iadd \
	inout \
	input \
	inplaceadd \
	implicittest \
	kwargs \
	li_cstring \
	li_cwstring \
	li_factory \
	li_implicit \
	li_std_vectora \
	li_std_map \
	li_std_set \
	li_std_stream \
	li_std_wstream \
	li_std_wstring \
	nondynamic \
	overload_simple_cast \
	primitive_types \
	std_containers \
	swigobject \
	template_matrix \
	simutry \
	vector


C_TEST_CASES += \
	file_test \
	li_cstring \
	li_cwstring \
	nondynamic

#
# This test only works with modern C compilers
#
#C_TEST_CASES += \
#	complextest

include $(srcdir)/../common.mk

# Overridden variables here
LIBS       = -L.
SWIGOPT   := -I$(top_srcdir)/$(EXAMPLES)/$(TEST_SUITE)/python/ $(SWIGOPT)
INCLUDES  += -I$(top_srcdir)/$(EXAMPLES)/$(TEST_SUITE)/python/ 

# Rules for the different types of tests
%.cpptest:
	$(setup)
	+$(swig_and_compile_cpp)
	$(run_testcase)

%.ctest:
	$(setup)
	+$(swig_and_compile_c)
	$(run_testcase)

%.multicpptest:
	$(setup)
	+$(swig_and_compile_multi_cpp)
	$(run_testcase)

# Call 2to3 to generate Python 3.x test from the Python 2.x's *_runme.py file
%$(SCRIPTSUFFIX): $(srcdir)/../python/%_runme.py
	cp $< $@
	$(PY2TO3) -w $@ >/dev/null 2>&1 



# Runs the testcase. A testcase is only run if
# a file is found which has _runme.py appended after the testcase name.

py2_runme = $(srcdir)/../python/$(SCRIPTPREFIX)$*_runme.py
py3_runme = $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX) 

run_testcase = \
	if [ -f $(py2_runme) ]; then (	  \
	  $(MAKE) -f $(srcdir)/Makefile $(py3_runme) && \
	  env LD_LIBRARY_PATH=.:$$LD_LIBRARY_PATH PYTHONPATH=$(srcdir):$$PYTHONPATH $(PYTHON) $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX);) \
	fi;

# Clean: remove the generated .py file
%.clean:
	@rm -f hugemod.h hugemod_a.i hugemod_b.i hugemod_a.py hugemod_b.py hugemod_runme.py
	@rm -f $*.py;

clean:
	$(MAKE) -f $(top_builddir)/$(EXAMPLES)/Makefile python_clean

cvsignore:
	@echo '*wrap* *.pyc *.so *.dll *.exp *.lib'
	@echo Makefile
	@for i in ${CPP_TEST_CASES} ${C_TEST_CASES}; do echo $$i.py; done 
	@for i in ${CPP_TEST_CASES} ${C_TEST_CASES}; do if grep -q $${i}_runme.py CVS/Entries ; then echo $${i}_runme.py; fi; done 
	@echo clientdata_prop_a.py 
	@echo clientdata_prop_b.py 
	@echo imports_a.py 
	@echo imports_b.py 
	@echo mod_a.py mod_b.py 
	@echo hugemod.h hugemod_a.i hugemod_b.i hugemod_a.py hugemod_b.py hugemod_runme.py
	@echo template_typedef_import.py


hugemod:
	perl hugemod.pl
	$(MAKE) hugemod_a.cpptest
	$(MAKE) hugemod_b.cpptest
	time $(PYTHON) hugemod_runme.py
	time $(PYTHON) hugemod_runme.py
